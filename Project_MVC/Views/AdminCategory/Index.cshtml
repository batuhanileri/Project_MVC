@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        @*<th>ID</th>*@
        <th>KATEGORİ ADI</th>
        <th>KATEGORİ AÇIKLAMASI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>BAŞLIKLAR</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    @*<td>@item.CategoryId</td>*@
    <td>@item.CategoryName</td>
    <td>@item.CategoryDescription</td>
    <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-danger">SİL</a></td>
    <td><a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-warning">GÜNCELLE</a></td>
    <td><a href="#" class="btn btn-success">BAŞLIKLAR</a></td>

</tr>

    }
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori Ekle</a>